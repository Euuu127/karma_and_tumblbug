<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
    
<mapper namespace="com.karma_and_tumblbug.p1.PaymentDAO">

<select id="getList" parameterType="PaymentDTO" resultType="PaymentDTO">
select * from payment where id=#{id}
</select>

<delete id="setDelete" parameterType="PaymentDTO">
delete from payment where num=#{num}
</delete>

<insert id="setInsert" parameterType="PaymentDTO">
insert into payment values(payment_seq.nextval,#{id},#{division},#{bankName},#{bankAccount},#{ownerName},#{ownerBirth},#{cardNumber},#{expirationDate},#{securityNumber})
</insert>


</mapper>